@inject IJSRuntime jsRunner

<TableRowHeader Text="No records to display" TextAlign="TextAlignType.Start" />

@code {

    [Parameter] public string ParentRef { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            if (!string.IsNullOrWhiteSpace(ParentRef))
            {
                await jsRunner.InvokeVoidAsync(JSConstants.SetTableEmptyRowWidth, ParentRef);
            }
        }
    }
}
